{
    "name": "technogix",
    "version": "v1.0.0",
    "private": true,
    "dependencies": {
        "@emotion/react": "^11.8.2",
        "@emotion/styled": "^11.8.1",
        "@fontsource/roboto": "^4.5.2",
        "@fontsource/roboto-condensed": "^4.5.6",
        "@mui/icons-material": "^5.3.1",
        "@mui/material": "^5.4.0",
        "@mui/system": "^5.4.4",
        "@testing-library/dom": "^8.11.3",
        "@testing-library/jest-dom": "^5.16.2",
        "@testing-library/react": "^12.1.3",
        "eslint-config-airbnb": "^19.0.4",
        "notistack": "^2.0.3",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-intl": "^5.24.4",
        "react-ios-pwa-prompt": "^1.8.4",
        "react-router-dom": "^6.2.1",
        "react-scripts": "5.0.0",
        "serve": "^13.0.2",
        "styled-components": "^5.3.3",
        "web-vitals": "^2.1.4"
    },
    "scripts": {
        "start": "react-scripts start",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "test": "react-scripts test --coverage --env=jsdom",
        "build": "react-scripts build",
        "eject": "react-scripts eject"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/technogix/portal.git"
    },
    "bugs": {
        "url": "https://github.com/technogix/portal/issues"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ],
        "env": {
            "browser": true,
            "es6": true
        },
        "globals": {
            "Atomics": "readonly",
            "SharedArrayBuffer": "readonly"
        },
        "parserOptions": {
            "ecmaFeatures": {
                "jsx": true,
                "modules": true
            },
            "ecmaVersion": 2018,
            "sourceType": "module"
        },
        "plugins": [
            "react"
        ],
        "rules": {
            "react/jsx-indent": [
                1,
                4,
                {
                    "indentLogicalExpressions": true
                }
            ],
            "react/jsx-indent-props": [
                1,
                4
            ],
            "react/jsx-filename-extension": [
                1,
                {
                    "extensions": [
                        ".js",
                        ".jsx"
                    ]
                }
            ],
            "react/forbid-prop-types": [
                0,
                {
                    "forbid": [
                        "any"
                    ]
                }
            ],
            "react/prop-types": 0,
            "react/destructuring-assignment": 0,
            "react/sort-comp": 0,
            "react/no-did-update-set-state": 0,
            "react/jsx-boolean-value": 0,
            "import/prefer-default-export": 1,
            "import/no-extraneous-dependencies": 1,
            "import/no-unresolved": 1,
            "prefer-template": 1,
            "prefer-const": 1,
            "no-unused-vars": 1,
            "indent": [
                1,
                4
            ],
            "no-mixed-spaces-and-tabs": 1,
            "operator-linebreak": [
                2,
                "after"
            ],
            "comma-dangle": [
                2,
                {
                    "arrays": "never",
                    "objects": "always-multiline",
                    "imports": "never",
                    "exports": "never",
                    "functions": "never"
                }
            ],
            "object-curly-newline": [
                2,
                {
                    "ObjectExpression": {
                        "multiline": true
                    },
                    "ObjectPattern": {
                        "multiline": true
                    },
                    "ImportDeclaration": "never",
                    "ExportDeclaration": "never"
                }
            ],
            "padded-blocks": [
                1,
                "always",
                {
                    "allowSingleLineBlocks": true
                }
            ]
        }
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "eslint": "^8.10.0"
    }
}
